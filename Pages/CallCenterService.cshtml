    <style>

        /*Tarjetas que giran*/
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .card {
            width: calc(50% - 5px); /* El ancho de cada tarjeta será la mitad del contenedor menos un pequeño espacio */
            height: 300px;
            background: rgb(0, 87, 128);
            position: relative;
            /*border-radius: 20px;*/
            cursor: pointer;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.123);
            margin-bottom: 5px; /* Espacio entre las filas */
        }

            .card img {
                position: absolute;
                width: 100%;
                border-radius: 10px;
            }

        .contentX {
            position: absolute;
            width: 100%;
            bottom: 0;
            height: 50px;
            padding: 0.4em 1.5em;
            font-size: 14px;
            background: rgba(255, 255, 255, 0);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            transform: scale(0.9);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.164);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.144);
            overflow: hidden;
            transition: all .4s;
        }

            .contentX p {
                font-size: 0.8em;
            }

        .card:hover .contentX {
            height: auto;
        }

        /* Estilos para los botones de imágenes DEL FINAL */
        .image-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 50px;
        }

        .image-button {
            margin: 0 10px;
            position: relative; /* Posición relativa para que el texto esté dentro de la imagen */
            overflow: hidden; /* Oculta el texto que está fuera de la imagen */
        }

            .image-button img {
                width: 160px;
                height: 190px;
                border: 3px solid transparent; /* Borde transparente */
                border-radius: 10px; /* Bordes redondeados */
                transition: opacity 0.3s ease; /* Transición suave para la opacidad */
            }

            /* Efecto de opacidad al pasar el mouse sobre las imágenes */
            .image-button:hover img {
                opacity: 0.5; /* Opacidad reducida al pasar el mouse */
                border-color: rgba(43, 209, 216, 1);
            }

            /* Estilos para el texto */
            .image-button p {
                position: absolute; /* Posición absoluta con respecto al contenedor */
                top: 50%; /* Alinea el texto en el centro verticalmente */
                left: 50%; /* Alinea el texto en el centro horizontalmente */
                transform: translate(-50%, -50%); /* Centra el texto completamente */
                color: rgba(43, 209, 216, 1); /* Color del texto */
                opacity: 0; /* Inicialmente el texto es transparente */
                transition: opacity 0.3s ease; /* Transición suave para la opacidad */
            }

            /* Mostrar el texto al pasar el mouse sobre las imágenes */
            .image-button:hover p {
                opacity: 1; /* Mostrar el texto con opacidad completa */
            }

        button {
            padding: 17px 40px;
            border-radius: 50px;
            cursor: pointer;
            border: 0;
            background-color: white;
            box-shadow: rgb(0 0 0 / 5%) 0 0 8px;
            letter-spacing: 1.5px;
            text-transform: uppercase;
