@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Area of Expertise</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Estilos para la imagen de fondo */
        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://i.imgur.com/UFKspfB.png');
            background-size: cover;
            background-position: center;
            z-index: -1;
        }
        /* Estilos para la imagen dentro del contenido */
        .top-image {
            width: 100%; /* Ajusta el ancho según sea necesario */
            margin-top: -100px; /* Ajusta el margen superior según sea necesario para evitar solapamientos */
        }
    </style>
</head>
<body>
    <!-- Fondo en la parte superior de la página -->
    <div class="background-image"></div>

    <!-- Contenido de la página -->
    <div class="content">
        <!-- Imagen dentro del contenido -->
        <img src="https://i.imgur.com/qs1ESyw.png" alt="Top Image" class="top-image">

        <!-- Otro contenido de tu página -->
        <div>
            <!-- Otros elementos de tu página -->
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>



